<resources>

    <!-- Base application light theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="primaryColor">@color/colorPrimaryDark</item>
        <item name="primaryColorDark">@color/colorPrimary</item>
        <item name="accentColor">@color/lightThemeBlue</item>

        <item name="backgroundColor">#F5F5F5</item>
        <item name="backgroundColorDark">@color/lightThemeBlue</item>
        <item name="toolbarColor">#2999f2</item>

        <item name="textPrimary">@color/black</item>
        <item name="textSecondary">#D0D0D0</item>

        <item name="hintColor">#9A9A9A</item>

        <item name="colorControlNormal">#CDCDCD</item>
        <item name="colorControlActivated">#2999f2</item>

        <item name="statusBarColorD">@color/lightThemeBlue</item>
        <item name="statusBarColorL">@color/lightThemeBlue</item>

        <item name="android:statusBarColor">@color/lightThemeBlue</item>
        <item name="dialogBG">#1c649c</item>

        <item name="accentDialog">@color/yellow_pastel</item>
        <item name="accentDialogGreen">@color/yellow_pastel</item>

        <item name="division">#CCC</item>

    </style>

    <!--     Base application Dark theme.-->
    <style name="MyDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="primaryColor">@color/colorPrimary</item>
        <item name="primaryColorDark">@color/colorPrimaryDark</item>
        <item name="accentColor">@color/colorAccent</item>

        <item name="backgroundColor">@color/background</item>
        <item name="backgroundColorDark">@color/backgroundDark</item>
        <item name="toolbarColor">@color/toolbar_color</item>

        <item name="textPrimary">@color/white</item>
        <item name="textSecondary">@color/gray</item>

        <item name="hintColor">@color/hint_color</item>

        <item name="colorControlNormal">#CDCDCD</item>
        <item name="colorControlActivated">@color/colorAccent</item>

        <item name="statusBarColorD">@color/backgroundDark</item>
        <item name="statusBarColorL">@color/background</item>

        <item name="android:statusBarColor">@color/background</item>
        <item name="dialogBG">@color/toolbar_color</item>
        <item name="accentDialog">@color/colorAccent</item>
        <item name="accentDialogGreen">@color/yellow_pastel</item>

        <item name="division">#444</item>

    </style>


    <!--    //this is the main dialog theme-->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/accentDialog</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#CCC</item>

        <item name="dialogCornerRadius">15dp</item>

        <item name="android:background">?attr/dialogBG</item>
    </style>

    <!--    //this is the secondary custom alert dialog theme-->
    <style name="AlertDialogGreen" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/accentDialogGreen</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#CCC</item>

        <item name="dialogCornerRadius">15dp</item>

        <item name="android:background">?attr/dialogBG</item>
    </style>

    <!--    //this is the main 'progress bar and progress dialog'    theme-->
    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/accentDialog</item>
        <item name="android:textColor">@color/white</item>

        <item name="dialogCornerRadius">15dp</item>

        <item name="android:background">?attr/dialogBG</item>
    </style>

</resources>
