<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#CDCDCD</item>
        <item name="colorControlActivated">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/background</item>
    </style>

    <!--    //this is the main dialog theme-->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#CCC</item>

        <item name="dialogCornerRadius">15dp</item>

        <item name="android:background">@color/toolbar_color</item>
    </style>

    <!--    //this is the secondary custom alert dialog theme-->
    <style name="AlertDialogGreen" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/green_pastel</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#CCC</item>

        <item name="dialogCornerRadius">15dp</item>

        <item name="android:background">@color/toolbar_color</item>
    </style>

    <!--    //this is the main 'progress bar and progress dialog'    theme-->
    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#FFF</item>

        <item name="dialogCornerRadius">15dp</item>

        <item name="android:background">@color/toolbar_color</item>
    </style>


</resources>
